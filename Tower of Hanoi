# Notice that we need 'return' or 'else' after the 'if' sentense, otherwise
# the computer will continue to calculate when n-1 = 0 and occurs a exceeding
# problem.

def move(n, a, b, c):
	if n == 1:
		print('%s --> %s' % (a, c))
		return
	(move(n-1, a, c, b))
	(move(1, a, b, c))
	(move(n-1, b, a, c))
move(3,'A','B','C')

# Or:
def move(n, a, b, c):
	if n == 1:
		print('%s --> %s' % (a, c))
	else:
		(move(n-1, a, c, b))
		(move(1, a, b, c))
		(move(n-1, b, a, c))
move(3,'A','B','C')
